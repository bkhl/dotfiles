# Key bindings
bindkey ^[[5;5~ prev
bindkey ^[[6;5~ next
escape ^Zz

# Output monitoring
defmonitor on

# Scrollback
defscrollback 50000

# Status bar
hardstatus alwayslastline "%H | %w%=| %D %Y-%m-%d %c"
shelltitle '$ |bash'

# Startup message
startup_message off

# Change to home directory.
chdir ${HOME}

# Default to login shell
defshell -bash
