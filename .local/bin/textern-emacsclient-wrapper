#!/bin/bash

# Used like this in Textern configuration.
#
# ["textern-emacsclient-wrapper", "%s", "%l", "%c"]

filename="$1"
line="$2"
column="$3"

exec emacsclient \
     --create-frame \
     --alternate-editor= \
     --eval "(progn (find-file \"$filename\") (goto-line $line) (move-to-column $column) (select-frame-set-input-focus (selected-frame)))
