[user]
	email = bkhl@elektrubadur.se
	name = Björn Lindström
[include]
    path = .gitconfig.local
[init]
	defaultBranch = main
[fetch]
    fsckobjects = true
	parallel = 10
[pull]
	ff = only
[push]
	autoSetupRemote = true
[transfer]
    fsckobjects = true
[receive]
    fsckobjects = true
[merge]
    conflictstyle = zdiff3
[rebase]
    autosquash = true
[branch]
    sort = -committerdate
[tag]
    sort = taggerdate
[status]
    submoduleSummary = true
[diff]
    algorithm = histogram
    submodule = log
[diff "elisp"]
    xfuncname="^\\((((def\\S+)|use-package)\\s+\\S+)"
[diff "org"]
    xfuncname="^\\*+ +(.*)$"
[alias]
	st = status
[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
